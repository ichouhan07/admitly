<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:id="@+id/vw1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/dp_30"
            android:background="@drawable/filter_project_radius"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">
            <ImageView
                android:id="@+id/succ_icon"
                android:layout_width="175dp"
                android:layout_height="161dp"
                android:layout_marginTop="@dimen/dp_30"
                android:src="@drawable/success_icon"
                android:textAlignment="center"
                android:layout_alignParentEnd="true"
                android:layout_alignParentStart="true"/>
            <TextView
                android:id="@+id/txt1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_8"
                android:fontFamily="@font/inter"
                android:text="@string/payment_successfully_released"
                android:textSize="@dimen/sp_20"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_alignParentEnd="true"
                android:layout_alignParentStart="true"
                android:layout_below="@id/succ_icon"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/done_released_btn"
                android:layout_width="145dp"
                android:layout_height="@dimen/dp_45"
                android:layout_below="@id/txt1"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dp_20"
                android:layout_marginBottom="@dimen/dp_34"
                android:background="@drawable/signin_btn_radius"
                android:fontFamily="@font/inter"
                android:text="@string/done"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_16" />
        </RelativeLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>