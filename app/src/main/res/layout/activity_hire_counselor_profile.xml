<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.student.HireCounselorProfileActivity">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/grey95">
        <View
            android:id="@+id/view1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_90"
            android:background="@color/white"
            app:layout_constraintTop_toTopOf="parent"/>
        <LinearLayout
            android:id="@+id/lin1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_34"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">
            <ImageView
                android:id="@+id/back_btn"
                android:layout_width="@dimen/sp_16"
                android:layout_height="@dimen/sp_16"
                android:layout_marginStart="@dimen/dp_30"
                android:src="@drawable/back_btn" />
            <TextView
                android:id="@+id/mySer1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_14"
                android:fontFamily="@font/inter"
                android:text="@string/hire_counselor"
                android:textSize="@dimen/sp_18"
                android:textStyle="bold"
                android:textColor="@color/black" />
        </LinearLayout>
        <TextView
            android:id="@+id/text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_30"
            android:fontFamily="@font/inter"
            android:text="@string/major_applying_for_dream_school_2"
            android:textSize="@dimen/sp_16"
            android:textColor="@color/black"
            app:layout_constraintTop_toBottomOf="@id/view1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_25"
            android:layout_marginHorizontal="@dimen/dp_30"
            app:layout_constraintTop_toBottomOf="@id/text1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/iv_counselor_profile_pic"
                    android:layout_width="@dimen/dp_100"
                    android:layout_height="@dimen/dp_100"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="@dimen/dp_30"
                    android:src="@drawable/user" />
                <TextView
                    android:id="@+id/iv_counselor_profile_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_15"
                    android:fontFamily="@font/inter"
                    android:text="@string/guy_hawkins"
                    android:textSize="@dimen/sp_16"
                    android:textColor="@color/black"
                    android:layout_below="@id/iv_counselor_profile_pic"
                    android:gravity="center"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"/>
                <TextView
                    android:id="@+id/tv_counselor_country"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_10"
                    android:fontFamily="@font/inter"
                    android:text="@string/poland"
                    android:textSize="@dimen/sp_14"
                    android:layout_below="@id/iv_counselor_profile_name"
                    android:textColor="@color/ocean_buble"
                    android:gravity="center"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    />
                <LinearLayout
                    android:id="@+id/lin2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/dp_11"
                    android:gravity="center"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:layout_below="@id/tv_counselor_country">
                    <ImageView
                        android:id="@+id/star_logo"
                        android:layout_width="@dimen/dp_18"
                        android:layout_height="@dimen/dp_18"
                        android:src="@drawable/rating_star"
                        />
                    <TextView
                        android:id="@+id/tv_ratings"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp_5"
                        android:fontFamily="@font/inter"
                        android:text="@string/_3_6"
                        android:textSize="@dimen/sp_14"
                        android:textColor="@color/black"
                        android:gravity="center"
                        android:layout_toEndOf="@id/tv_ratings"
                        android:layout_below="@id/tv_counselor_country" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/ln3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginHorizontal="@dimen/dp_25"
                    android:layout_marginTop="@dimen/dp_25"
                    android:gravity="center"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:layout_below="@id/lin2">
                    <androidx.cardview.widget.CardView
                        android:layout_width="@dimen/dp_125"
                        android:layout_height="@dimen/dp_91"
                        app:cardCornerRadius="@dimen/dp_10"
                       app:cardBackgroundColor="@color/light_green">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:orientation="vertical">
                            <ImageView
                                android:id="@+id/experience_logo"
                                android:layout_width="@dimen/dp_24"
                                android:layout_height="@dimen/dp_24"
                                android:layout_gravity="center"
                                android:layout_below="@id/iv_profile_img"
                                android:layout_marginTop="@dimen/dp_15"
                                android:src="@drawable/experience_logo" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/inter"
                                android:layout_marginTop="@dimen/dp_10"
                                android:text="@string/_5_years"
                                android:textSize="@dimen/sp_14"
                                android:textColor="@color/black" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                    <View
                        android:layout_width="@dimen/dp_15"
                        android:layout_height="match_parent"/>
                    <androidx.cardview.widget.CardView
                        android:layout_width="@dimen/dp_125"
                        android:layout_height="@dimen/dp_91"
                        app:cardCornerRadius="@dimen/dp_10"
                        app:cardBackgroundColor="@color/old_lace">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:orientation="vertical">
                            <ImageView
                                android:layout_width="@dimen/dp_24"
                                android:layout_height="@dimen/dp_24"
                                android:layout_gravity="center"
                                android:layout_below="@id/iv_profile_img"
                                android:layout_marginTop="@dimen/dp_15"
                                android:src="@drawable/dollar_logo" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/dp_10"
                                android:fontFamily="@font/inter"
                                android:text="$406.27"
                                android:textSize="@dimen/sp_14"
                                android:textColor="@color/black" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/hire_counselor_btn"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_45"
                    android:layout_below="@id/ln3"
                    android:layout_marginHorizontal="@dimen/dp_25"
                    android:layout_marginTop="@dimen/dp_15"
                    android:layout_marginBottom="@dimen/dp_30"
                    android:background="@drawable/signin_btn_radius"
                    android:fontFamily="@font/inter"
                    android:text="@string/hire"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_18" />
            </RelativeLayout>

        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>