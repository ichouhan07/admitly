<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_15">
        <androidx.cardview.widget.CardView
            android:id="@+id/cardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="@dimen/dp_10"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@color/white">
            <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp_20">
                <TextView
                    android:id="@+id/tv_project_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter"
                    android:text="@string/major_applying_for_dream_school_2"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_18" />
                <ImageView
                    android:id="@+id/calender_logo"
                    android:layout_width="@dimen/dp_18"
                    android:layout_height="@dimen/dp_18"
                    android:layout_below="@id/tv_project_title"
                    android:layout_marginTop="@dimen/dp_15"
                    android:src="@drawable/calender_icon" />

                <TextView
                    android:id="@+id/tv_created"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_project_title"
                    android:layout_marginStart="@dimen/dp_8"
                    android:layout_marginTop="@dimen/dp_15"
                    android:layout_toEndOf="@id/calender_logo"
                    android:fontFamily="@font/inter"
                    android:text="20 April 2022"
                    android:textColor="@color/ocean_buble"
                    android:textSize="@dimen/sp_14" />

                <TextView
                    android:id="@+id/tv_dollar_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_project_title"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="@dimen/dp_15"
                    android:fontFamily="@font/inter"
                    android:text="@string/_202_87"
                    android:textColor="@color/ocean_buble"
                    android:textSize="@dimen/sp_14" />
                <ImageView
                    android:id="@+id/dollar_logo"
                    android:layout_width="@dimen/dp_18"
                    android:layout_height="18dp"
                    android:layout_marginTop="@dimen/dp_15"
                    android:layout_marginEnd="@dimen/dp_8"
                    android:src="@drawable/dollar_icon"
                    android:layout_toStartOf="@id/tv_dollar_price"
                    android:layout_below="@id/tv_project_title"/>
                <ImageView
                    android:id="@+id/new_logo"
                    android:layout_width="@dimen/dp_18"
                    android:layout_height="@dimen/dp_18"
                    android:layout_below="@id/calender_logo"
                    android:layout_marginTop="@dimen/dp_15"
                    android:src="@drawable/new_logo" />

                <TextView
                    android:id="@+id/tv_new"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/calender_logo"
                    android:layout_marginStart="@dimen/dp_8"
                    android:layout_marginTop="@dimen/dp_17"
                    android:layout_toEndOf="@id/new_logo"
                    android:fontFamily="@font/inter"
                    android:text="New"
                    android:textColor="@color/ocean_buble"
                    android:textSize="@dimen/dp_12" />
                <TextView
                    android:id="@+id/tv_easy_editing"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/dollar_logo"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="@dimen/dp_16"
                    android:fontFamily="@font/inter"
                    android:text="@string/essay_editing"
                    android:textColor="@color/ocean_buble"
                    android:textSize="@dimen/sp_14" />
                <ImageView
                    android:layout_width="@dimen/dp_18"
                    android:layout_height="18dp"
                    android:layout_marginTop="@dimen/dp_15"
                    android:layout_marginEnd="@dimen/dp_8"
                    android:src="@drawable/easy_editing_icon"
                    android:layout_toStartOf="@id/tv_easy_editing"
                    android:layout_below="@id/dollar_logo"/>

        </RelativeLayout>
        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>