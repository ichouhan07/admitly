<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_15">
        <androidx.cardview.widget.CardView
            android:id="@+id/cardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="@dimen/dp_10"
            app:layout_constraintTop_toTopOf="parent">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/dp_20">

                <TextView
                    android:id="@+id/tv_project_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter"
                    android:text="@string/major_applying_for_dream_school"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_18" />

                <TextView
                    android:id="@+id/tv_ratings"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:fontFamily="@font/inter"
                    android:text="0.5"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_14" />

                <ImageView
                    android:id="@+id/star_logo"
                    android:layout_width="@dimen/dp_18"
                    android:layout_height="18dp"
                    android:layout_marginEnd="@dimen/dp_8"
                    android:layout_toStartOf="@id/tv_ratings"
                    android:src="@drawable/rating_star" />

                <ImageView
                    android:id="@+id/calender_logo"
                    android:layout_width="@dimen/dp_18"
                    android:layout_height="@dimen/dp_18"
                    android:layout_below="@id/tv_project_title"
                    android:layout_marginTop="@dimen/dp_15"
                    android:src="@drawable/calender_icon" />

                <TextView
                    android:id="@+id/tv_created"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_project_title"
                    android:layout_marginStart="@dimen/dp_8"
                    android:layout_marginTop="@dimen/dp_15"
                    android:layout_toEndOf="@id/calender_logo"
                    android:fontFamily="@font/inter"
                    android:text="20 April 2022"
                    android:textColor="@color/ocean_buble"
                    android:textSize="@dimen/sp_14" />

                <TextView
                    android:id="@+id/tv_dollar_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_project_title"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="@dimen/dp_15"
                    android:fontFamily="@font/inter"
                    android:text="@string/_202_87"
                    android:textColor="@color/ocean_buble"
                    android:textSize="@dimen/sp_14" />
                <ImageView
                    android:id="@+id/dollar_logo"
                    android:layout_width="@dimen/dp_18"
                    android:layout_height="18dp"
                    android:layout_marginTop="@dimen/dp_15"
                    android:layout_marginEnd="@dimen/dp_8"
                    android:src="@drawable/dollar_icon"
                    android:layout_toStartOf="@id/tv_dollar_price"
                    android:layout_below="@id/tv_project_title"/>
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/iv_profile_img"
                    android:layout_width="@dimen/dp_29"
                    android:layout_height="@dimen/dp_29"
                    android:layout_marginTop="@dimen/dp_20"
                    android:scaleType="centerCrop"
                    android:layout_below="@id/calender_logo"
                    android:src="@drawable/user" />
                <TextView
                    android:id="@+id/tv_counselor_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/dp_12"
                    android:fontFamily="@font/inter"
                    android:text="@string/robert_fox"
                    android:layout_below="@id/calender_logo"
                    android:layout_toEndOf="@id/iv_profile_img"
                    android:layout_marginStart="@dimen/dp_8"
                    android:layout_marginTop="@dimen/dp_27"
                    android:textColor="@color/ocean_buble"
                    />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/row_release_payment_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_40"
                    android:layout_below="@id/calender_logo"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="@dimen/dp_15"
                    android:background="@drawable/signin_btn_radius"
                    android:padding="@dimen/dp_10"
                    android:text="Release Payment"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="@dimen/dp_12" />

                <ImageView
                    android:layout_width="@dimen/dp_36"
                    android:layout_height="@dimen/dp_40"
                    android:layout_below="@id/calender_logo"
                    android:layout_marginTop="@dimen/dp_15"
                    android:layout_marginEnd="@dimen/dp_10"
                    android:layout_toStartOf="@id/row_release_payment_btn"
                    android:src="@drawable/message_icon" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>