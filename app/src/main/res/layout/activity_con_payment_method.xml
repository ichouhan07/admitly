<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.counselor.ConPaymentMethodActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/grey95">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <View
                android:id="@+id/view1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_90"
                android:background="@color/white"
                app:layout_constraintTop_toTopOf="parent"/>
            <LinearLayout
                android:id="@+id/lin1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_34"
                android:gravity="center"
                android:orientation="horizontal"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">
                <ImageView
                    android:id="@+id/back_btn2"
                    android:layout_width="@dimen/dp_18"
                    android:layout_height="@dimen/sp_16"
                    android:layout_marginTop="@dimen/dp_2"
                    android:layout_marginStart="@dimen/dp_30"
                    android:src="@drawable/back_btn" />
                <TextView
                    android:id="@+id/mySer1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_14"
                    android:fontFamily="@font/inter"
                    android:text="@string/payment_method"
                    android:textSize="@dimen/sp_20"
                    android:textStyle="bold"
                    android:textColor="@color/black" />
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/rltv"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_160"
                android:layout_marginTop="@dimen/sp_20"
                android:layout_marginHorizontal="@dimen/dp_30"
                android:background="@drawable/green_card"
                app:layout_constraintTop_toBottomOf="@id/view1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">
                <ImageView
                    android:id="@+id/iv1"
                    android:layout_width="@dimen/dp_77"
                    android:layout_height="@dimen/dp_77"
                    android:layout_marginTop="@dimen/dp_30"
                    android:layout_marginStart="@dimen/dp_30"
                    android:src="@drawable/earning_icon"/>
                <TextView
                    android:id="@+id/erng"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_15"
                    android:layout_marginTop="@dimen/dp_37"
                    android:fontFamily="@font/inter"
                    android:text="@string/earnings"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_18"
                    android:layout_toEndOf="@id/iv1"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_15"
                    android:layout_marginTop="@dimen/dp_5"
                    android:fontFamily="@font/inter"
                    android:text="$406.27"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_30"
                    android:layout_toEndOf="@id/iv1"
                    android:layout_below="@+id/erng"/>
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/testEmptyLayout2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintTop_toBottomOf="@id/rltv"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>
            <RelativeLayout
                android:id="@+id/add_bank_account"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_45"
                android:layout_marginTop="@dimen/dp_25"
                android:gravity="center"
                android:layout_marginHorizontal="@dimen/dp_30"
                android:background="@drawable/add_more_radius"
                app:layout_constraintTop_toBottomOf="@id/testEmptyLayout2"
                app:layout_constraintStart_toStartOf="parent">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_45"
                    android:gravity="center"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="@dimen/dp_24"
                        android:layout_height="@dimen/dp_24"
                        android:src="@drawable/add_more_btn"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp_10"
                        android:fontFamily="@font/inter"
                        android:text="@string/add_bank_account"
                        android:textSize="@dimen/sp_18"
                        android:textColor="@color/green"/>
                </LinearLayout>
            </RelativeLayout>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/withdraw_btn"
                style="@style/ButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_45"
                android:layout_marginTop="@dimen/dp_25"
                android:layout_marginBottom="@dimen/dp_20"
                android:text="@string/withdraw"
                app:layout_constraintTop_toBottomOf="@id/add_bank_account"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</layout>