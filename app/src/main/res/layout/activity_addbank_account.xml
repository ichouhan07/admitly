<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.counselor.AddBankAccountActivity">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/grey95">
        <View
            android:id="@+id/view1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_90"
            android:background="@color/white"
            app:layout_constraintTop_toTopOf="parent"/>
        <LinearLayout
            android:id="@+id/lin1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_34"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">
            <ImageView
                android:id="@+id/back_btn3"
                android:layout_width="@dimen/dp_18"
                android:layout_height="@dimen/sp_16"
                android:layout_marginTop="@dimen/dp_2"
                android:layout_marginStart="@dimen/dp_30"
                android:src="@drawable/back_btn" />
            <TextView
                android:id="@+id/mySer1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_14"
                android:fontFamily="@font/inter"
                android:text="@string/add_bank_account"
                android:textSize="@dimen/sp_20"
                android:textStyle="bold"
                android:textColor="@color/black" />
        </LinearLayout>
        <TextView
            android:id="@+id/txt1"
            style="@style/HeadingTextViewStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_20"
            android:text="@string/account_holder_name"
            app:layout_constraintTop_toBottomOf="@id/view1"
            app:layout_constraintStart_toStartOf="parent" />
        <EditText
            android:id="@+id/account_holder_name_et"
            style="@style/InformationEditTextStyle"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_45"
            android:hint="@string/account_holder_name"
            app:layout_constraintTop_toBottomOf="@id/txt1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />
        <TextView
            android:id="@+id/txt2"
            style="@style/HeadingTextViewStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/bank_name"
            app:layout_constraintTop_toBottomOf="@id/account_holder_name_et"
            app:layout_constraintStart_toStartOf="parent" />
        <EditText
            android:id="@+id/bank_name_et"
            style="@style/InformationEditTextStyle"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_45"
            android:hint="@string/bank_name"
            app:layout_constraintTop_toBottomOf="@id/txt2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />
        <TextView
            android:id="@+id/txt3"
            style="@style/HeadingTextViewStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/account_number"
            app:layout_constraintTop_toBottomOf="@id/bank_name_et"
            app:layout_constraintStart_toStartOf="parent" />
        <EditText
            android:id="@+id/account_number_et"
            style="@style/InformationEditTextStyle"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_45"
            android:hint="@string/account_number"
            android:inputType="number"
            app:layout_constraintTop_toBottomOf="@id/txt3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />
        <TextView
            android:id="@+id/txt4"
            style="@style/HeadingTextViewStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/swift_code"
            app:layout_constraintTop_toBottomOf="@id/account_number_et"
            app:layout_constraintStart_toStartOf="parent" />
        <EditText
            android:id="@+id/swift_code_et"
            style="@style/InformationEditTextStyle"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_45"
            android:hint="@string/swift_code"
            app:layout_constraintTop_toBottomOf="@id/txt4"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/add_bank_btn"
            style="@style/ButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_45"
            android:layout_marginTop="@dimen/dp_30"
            android:layout_marginBottom="@dimen/dp_20"
            android:text="@string/add"
            app:layout_constraintTop_toBottomOf="@id/swift_code_et"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>