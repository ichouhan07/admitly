<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.student.ReviewCounselorActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/grey95">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <View
                android:id="@+id/view1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_90"
                android:background="@color/white"
                app:layout_constraintTop_toTopOf="parent"/>

            <LinearLayout
                android:id="@+id/lin1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_34"
                android:gravity="center"
                android:orientation="horizontal"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">
                <ImageView
                    android:id="@+id/back_btn"
                    android:layout_width="@dimen/dp_18"
                    android:layout_height="@dimen/sp_16"
                    android:layout_marginTop="@dimen/dp_2"
                    android:layout_marginStart="@dimen/dp_30"
                    android:src="@drawable/back_btn" />
                <TextView
                    android:id="@+id/mySer1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_14"
                    android:fontFamily="@font/inter"
                    android:text="@string/review_counselor"
                    android:textSize="@dimen/sp_20"
                    android:textStyle="bold"
                    android:textColor="@color/black" />
            </LinearLayout>
            <TextView
                android:id="@+id/tV_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_30"
                android:fontFamily="@font/inter"
                android:text="@string/major_applying_for_dream_school_2"
                android:textSize="@dimen/sp_16"
                android:textColor="@color/black"
                app:layout_constraintTop_toBottomOf="@id/view1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>
            <androidx.cardview.widget.CardView
                android:id="@+id/cv_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_25"
                android:layout_marginHorizontal="@dimen/dp_30"
                app:layout_constraintTop_toBottomOf="@id/tV_1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white">
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/iv_counselor_profile_pic"
                        android:layout_width="@dimen/dp_100"
                        android:layout_height="@dimen/dp_100"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="@dimen/dp_30"
                        android:src="@drawable/user" />
                    <TextView
                        android:id="@+id/tv_counselor_profile_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_15"
                        android:fontFamily="@font/inter"
                        android:text="@string/guy_hawkins"
                        android:textSize="@dimen/sp_16"
                        android:textColor="@color/black"
                        android:layout_below="@id/iv_counselor_profile_pic"
                        android:gravity="center"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentEnd="true"/>

                    <TextView
                        android:id="@+id/tv_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tv_counselor_profile_name"
                        android:layout_alignParentStart="true"
                        android:layout_marginStart="@dimen/dp_30"
                        android:layout_marginTop="@dimen/dp_30"
                        android:fontFamily="@font/inter"
                        android:text="@string/competency"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sp_14" />
                    <RatingBar
                        android:id="@+id/ratingBar1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="?android:attr/ratingBarStyleSmall"
                        android:progressTint="#FFCE31"
                        android:progressBackgroundTint="#DBDBDB"
                        android:stepSize="1"
                        android:isIndicator="false"
                        android:layout_marginTop="@dimen/dp_30"
                        android:layout_marginEnd="@dimen/dp_10"
                        android:layout_toStartOf="@id/tv_rating_responsiveness"
                        android:layout_below="@id/tv_counselor_profile_name"/>
                    <TextView
                        android:id="@+id/tv_rating_competency"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/dp_21"
                        android:layout_marginTop="@dimen/dp_30"
                        android:fontFamily="@font/inter"
                        android:text="0.0"
                        android:textSize="@dimen/sp_14"
                        android:textColor="@color/black"
                        android:layout_below="@id/tv_counselor_profile_name"
                        android:layout_alignParentEnd="true"/>
                    <TextView
                        android:id="@+id/tv_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp_30"
                        android:layout_marginTop="@dimen/dp_30"
                        android:fontFamily="@font/inter"
                        android:text="@string/professionalism"
                        android:textSize="@dimen/sp_14"
                        android:textColor="@color/black"
                        android:layout_below="@id/tv_1"
                        android:layout_alignParentStart="true" />
                   <!-- <ImageView
                        android:layout_width="@dimen/dp_94"
                        android:layout_height="@dimen/dp_16"
                        android:layout_marginTop="@dimen/dp_30"
                        android:layout_marginEnd="@dimen/dp_5"
                        android:src="@drawable/four_star_ic"
                        android:layout_toStartOf="@id/tv_rating_professionalism"
                        android:layout_below="@id/tv_1"/>-->
                    <RatingBar
                        android:id="@+id/ratingBar2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="?android:attr/ratingBarStyleSmall"
                        android:progressTint="#FFCE31"
                        android:progressBackgroundTint="#DBDBDB"
                        android:stepSize="1"
                        android:isIndicator="false"
                        android:layout_marginTop="@dimen/dp_30"
                        android:layout_marginEnd="@dimen/dp_10"
                        android:layout_toStartOf="@id/tv_rating_responsiveness"
                        android:layout_below="@id/tv_1"/>
                    <TextView
                        android:id="@+id/tv_rating_professionalism"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/dp_21"
                        android:layout_marginTop="@dimen/dp_30"
                        android:fontFamily="@font/inter"
                        android:text="0.0"
                        android:textSize="@dimen/sp_14"
                        android:textColor="@color/black"
                        android:layout_below="@id/tv_1"
                        android:layout_alignParentEnd="true"/>
                    <TextView
                        android:id="@+id/tv_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp_30"
                        android:layout_marginTop="@dimen/dp_30"
                        android:layout_marginBottom="@dimen/dp_40"
                        android:fontFamily="@font/inter"
                        android:text="@string/responsiveness"
                        android:textSize="@dimen/sp_14"
                        android:textColor="@color/black"
                        android:layout_below="@id/tv_2"
                        android:layout_alignParentStart="true" />
                    <!--<ImageView
                        android:layout_width="@dimen/dp_94"
                        android:layout_height="@dimen/dp_16"
                        android:layout_marginTop="@dimen/dp_30"
                        android:layout_marginEnd="@dimen/dp_5"
                        android:src="@drawable/three_star_icon"
                        android:layout_toStartOf="@id/tv_rating_responsiveness"
                        android:layout_below="@id/tv_2"/>-->
                    <!--<RatingBar
                        android:id="@+id/rating_bar3"
                        android:layout_width="@dimen/dp_90"
                        android:layout_height="@dimen/dp_30"
                        android:padding="@dimen/dp_5"
                        style="?android:attr/ratingBarStyleSmall"
                        android:clickable="true"
                        android:numStars="5"
                        android:isIndicator="true"
                        android:stepSize="0.1"
                        android:layout_marginTop="@dimen/dp_30"
                        android:layout_marginEnd="@dimen/dp_5"
                        android:layout_toStartOf="@id/tv_rating_responsiveness"
                        android:layout_below="@id/tv_2"
                        android:focusable="true" />-->
                    <RatingBar
                        android:id="@+id/ratingBar3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="?android:attr/ratingBarStyleSmall"
                        android:progressTint="#FFCE31"
                        android:progressBackgroundTint="#DBDBDB"
                        android:stepSize="1"
                        android:isIndicator="false"
                        android:layout_marginTop="@dimen/dp_30"
                        android:layout_marginEnd="@dimen/dp_10"
                        android:layout_toStartOf="@id/tv_rating_responsiveness"
                        android:layout_below="@id/tv_2"/>

                    <TextView
                        android:id="@+id/tv_rating_responsiveness"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tv_2"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="@dimen/dp_30"
                        android:layout_marginEnd="@dimen/dp_21"
                        android:fontFamily="@font/inter"
                        android:text="0.0"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sp_14" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
            <TextView
                android:id="@+id/text3"
                style="@style/HeadingTextViewStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_25"
                android:text="@string/notes"
                app:layout_constraintTop_toBottomOf="@id/cv_1"
                app:layout_constraintStart_toStartOf="parent"/>
            <EditText
                android:id="@+id/feedback_et"
                style="@style/InformationEditTextStyle"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_118"
                android:hint="@string/write_here"
                android:gravity="start"
                app:layout_constraintTop_toBottomOf="@id/text3"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                />
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/send_review_btn"
                style="@style/ButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_45"
                android:layout_marginTop="@dimen/dp_30"
                android:layout_marginBottom="@dimen/dp_20"
                android:text="@string/send_review"
                app:layout_constraintTop_toBottomOf="@id/feedback_et"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</layout>