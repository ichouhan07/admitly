<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/parent_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/RL_1"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_80"
        android:layout_marginStart="@dimen/dp_18">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/chatList_profliePicture"
            android:layout_width="66dp"
            android:layout_height="66dp"
            android:layout_centerInParent="true"
            android:src="@drawable/user"
            app:civ_border_color="@color/white"
            app:civ_border_width="2dp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/RL_2"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_80"
        android:layout_toEndOf="@id/RL_1"
        >
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="@color/ocean_buble"/>

        <TextView
            android:id="@+id/chatList_profileName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_14"
            android:layout_marginTop="@dimen/dp_16"
            android:fontFamily="@font/inter"
            android:text="Bessie Cooper"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_18" />

        <TextView
            android:id="@+id/last_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/chatList_profileName"
            android:layout_marginStart="@dimen/dp_14"
            android:layout_marginTop="@dimen/dp_4"
            android:fontFamily="@font/inter"
            android:text="Hello!"
            android:textColor="@color/ocean_buble"
            android:textSize="@dimen/sp_14" />

    <TextView
        android:id="@+id/messageTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="@dimen/dp_16"
        android:layout_marginEnd="@dimen/dp_18"
        android:text="30min"
        android:textColor="@color/ocean_buble"
        android:textSize="@dimen/sp_14" />

    </RelativeLayout>

</RelativeLayout>