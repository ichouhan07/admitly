<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.student.StuPaymentMethodActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/grey95">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <View
                android:id="@+id/view1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_90"
                android:background="@color/white"
                app:layout_constraintTop_toTopOf="parent"/>
            <LinearLayout
                android:id="@+id/lin1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_34"
                android:gravity="center"
                android:orientation="horizontal"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">
                <ImageView
                    android:id="@+id/back_btn"
                    android:layout_width="@dimen/dp_18"
                    android:layout_height="@dimen/sp_16"
                    android:layout_marginTop="@dimen/dp_2"
                    android:layout_marginStart="@dimen/dp_30"
                    android:src="@drawable/back_btn" />
                <TextView
                    android:id="@+id/mySer1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_14"
                    android:fontFamily="@font/inter"
                    android:text="@string/payment_method"
                    android:textSize="@dimen/sp_20"
                    android:textStyle="bold"
                    android:textColor="@color/black" />
            </LinearLayout>
            <RelativeLayout
                android:id="@+id/rtv"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_160"
                android:layout_marginTop="@dimen/sp_20"
                android:layout_marginHorizontal="@dimen/dp_30"
                android:gravity="center"
                android:background="@drawable/green_card"
                app:layout_constraintTop_toBottomOf="@id/view1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dp_12"
                    android:fontFamily="@font/inter"
                    android:text="$406.27"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_30"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rtv1"
                style="@style/RegistrationEditTextStyle"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_63"
                android:gravity="center_vertical"
                app:layout_constraintTop_toBottomOf="@id/rtv"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">
                <ImageView
                    android:id="@+id/iv_1"
                    android:layout_width="@dimen/dp_34"
                    android:layout_height="@dimen/dp_29"
                    android:layout_marginStart="@dimen/dp_20"
                    android:src="@drawable/payment_type1_ic"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_15"
                    android:layout_marginTop="@dimen/dp_4"
                    android:layout_toEndOf="@id/iv_1"
                    android:fontFamily="@font/inter"
                    android:text="Guy@hawkins@gmail"
                    android:textColor="@color/black" />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rtv2"
                style="@style/RegistrationEditTextStyle"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_63"
                android:layout_marginTop="@dimen/dp_20"
                android:gravity="center_vertical"
                app:layout_constraintTop_toBottomOf="@id/rtv1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">
                <ImageView
                    android:id="@+id/iv_2"
                    android:layout_width="@dimen/dp_32"
                    android:layout_height="@dimen/dp_32"
                    android:layout_marginStart="@dimen/dp_20"
                    android:src="@drawable/payment_type2_ic"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter"
                    android:layout_marginTop="@dimen/dp_4"
                    android:layout_marginStart="@dimen/dp_15"
                    android:text="Codyfisher@gmail"
                    android:textColor="@color/black"
                    android:layout_toEndOf="@id/iv_2"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rtv3"
                style="@style/RegistrationEditTextStyle"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_63"
                android:layout_marginTop="@dimen/dp_20"
                android:gravity="center_vertical"
                app:layout_constraintTop_toBottomOf="@id/rtv2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">
                <ImageView
                    android:id="@+id/iv_3"
                    android:layout_width="@dimen/dp_34"
                    android:layout_height="@dimen/dp_24"
                    android:layout_marginTop="@dimen/dp_8"
                    android:layout_marginStart="@dimen/dp_20"
                    android:src="@drawable/payment_type3_ic"/>
                <TextView
                    android:id="@+id/tv_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter"
                    android:layout_marginStart="@dimen/dp_15"
                    android:text="****  ****  ****  1234"
                    android:textSize="@dimen/sp_14"
                    android:textColor="@color/black"
                    android:layout_toEndOf="@id/iv_3"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter"
                    android:layout_marginStart="@dimen/dp_15"
                    android:text="Expires 2025"
                    android:textSize="@dimen/sp_14"
                    android:textColor="@color/ocean_buble"
                    android:layout_toEndOf="@id/iv_3"
                    android:layout_below="@id/tv_1"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rtv4"
                style="@style/RegistrationEditTextStyle"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_63"
                android:layout_marginTop="@dimen/dp_20"
                android:gravity="center_vertical"
                app:layout_constraintTop_toBottomOf="@id/rtv3"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">
                <ImageView
                    android:id="@+id/iv_4"
                    android:layout_width="@dimen/dp_34"
                    android:layout_height="@dimen/dp_23"
                    android:layout_marginTop="@dimen/dp_8"
                    android:layout_marginStart="@dimen/dp_20"
                    android:src="@drawable/payment_type4_ic"/>
                <TextView
                    android:id="@+id/tv_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter"
                    android:layout_marginStart="@dimen/dp_15"
                    android:text="****  ****  ****  1234"
                    android:textSize="@dimen/sp_14"
                    android:textColor="@color/black"
                    android:layout_toEndOf="@id/iv_4"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter"
                    android:layout_marginStart="@dimen/dp_15"
                    android:text="Expires 2025"
                    android:textSize="@dimen/sp_14"
                    android:textColor="@color/ocean_buble"
                    android:layout_toEndOf="@id/iv_4"
                    android:layout_below="@id/tv_2"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/add_payment_method"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_45"
                android:layout_marginTop="@dimen/dp_30"
                android:gravity="center"
                android:layout_marginHorizontal="@dimen/dp_30"
                android:background="@drawable/add_more_radius"
                app:layout_constraintTop_toBottomOf="@id/rtv4"
                app:layout_constraintStart_toStartOf="parent">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_45"
                    android:gravity="center"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="@dimen/dp_24"
                        android:layout_height="@dimen/dp_24"
                        android:src="@drawable/add_more_btn"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp_10"
                        android:fontFamily="@font/inter"
                        android:text="@string/add_payment_method"
                        android:textSize="@dimen/sp_18"
                        android:textColor="@color/green"/>
                </LinearLayout>
            </RelativeLayout>
            <androidx.appcompat.widget.AppCompatButton
                style="@style/ButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_45"
                android:layout_marginTop="@dimen/dp_22"
                android:layout_marginBottom="@dimen/dp_22"
                android:text="@string/conti_nue"
                app:layout_constraintTop_toBottomOf="@id/add_payment_method"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</layout>