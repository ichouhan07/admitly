<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".studentScreens.studentActivities.StudentInfoActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/info1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_34"
                    android:fontFamily="@font/inter"
                    android:text="@string/my_information"
                    android:textSize="@dimen/sp_18"
                    android:textColor="@color/black"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>
                <TextView
                    android:id="@+id/c1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_61"
                    android:layout_marginStart="@dimen/dp_30"
                    android:fontFamily="@font/inter"
                    android:text="@string/country"
                    android:textSize="@dimen/sp_18"
                    android:textColor="@color/black"
                    app:layout_constraintTop_toBottomOf="@id/info1"
                    app:layout_constraintStart_toStartOf="parent" />
                <EditText
                    android:id="@+id/info_country"
                    style="@style/InformationEditTextStyle"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_45"
                    android:layout_marginTop="@dimen/dp_10"
                    android:background="@drawable/edit_input_radius"
                    android:hint="@string/enter"
                    app:layout_constraintTop_toBottomOf="@id/c1"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    />
                <TextView
                    android:id="@+id/s1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_13"
                    android:layout_marginStart="@dimen/dp_30"
                    android:fontFamily="@font/inter"
                    android:text="@string/school"
                    android:textSize="@dimen/sp_18"
                    android:textColor="@color/black"
                    app:layout_constraintTop_toBottomOf="@id/info_country"
                    app:layout_constraintStart_toStartOf="parent" />
                <EditText
                    android:id="@+id/info_school"
                    style="@style/InformationEditTextStyle"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_45"
                    android:layout_marginTop="@dimen/dp_10"
                    android:background="@drawable/edit_input_radius"
                    android:hint="@string/enter"
                    app:layout_constraintTop_toBottomOf="@id/s1"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    />
                <TextView
                    android:id="@+id/y1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_13"
                    android:layout_marginStart="@dimen/dp_30"
                    android:fontFamily="@font/inter"
                    android:text="@string/year"
                    android:textSize="@dimen/sp_18"
                    android:textColor="@color/black"
                    app:layout_constraintTop_toBottomOf="@id/info_school"
                    app:layout_constraintStart_toStartOf="parent" />
                <EditText
                    android:id="@+id/info_year"
                    style="@style/InformationEditTextStyle"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_45"
                    android:layout_marginTop="@dimen/dp_10"
                    android:background="@drawable/edit_input_radius"
                    android:hint="@string/enter"
                    app:layout_constraintTop_toBottomOf="@id/y1"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    />
                <TextView
                    android:id="@+id/m1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_13"
                    android:layout_marginStart="@dimen/dp_30"
                    android:fontFamily="@font/inter"
                    android:text="@string/major"
                    android:textSize="@dimen/sp_18"
                    android:textColor="@color/black"
                    app:layout_constraintTop_toBottomOf="@id/info_year"
                    app:layout_constraintStart_toStartOf="parent" />
                <EditText
                    android:id="@+id/info_major"
                    style="@style/InformationEditTextStyle"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_45"
                    android:layout_marginTop="@dimen/dp_10"
                    android:background="@drawable/edit_input_radius"
                    android:hint="@string/enter"
                    app:layout_constraintTop_toBottomOf="@id/m1"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    />
                <TextView
                    android:id="@+id/g1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_13"
                    android:layout_marginStart="@dimen/dp_30"
                    android:fontFamily="@font/inter"
                    android:text="@string/gpa"
                    android:textSize="@dimen/sp_18"
                    android:textColor="@color/black"
                    app:layout_constraintTop_toBottomOf="@id/info_major"
                    app:layout_constraintStart_toStartOf="parent" />
                <EditText
                    android:id="@+id/info_gpa"
                    style="@style/InformationEditTextStyle"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_45"
                    android:layout_marginTop="@dimen/dp_10"
                    android:background="@drawable/edit_input_radius"
                    android:hint="@string/enter"
                    app:layout_constraintTop_toBottomOf="@id/g1"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    />
                <TextView
                    android:id="@+id/t1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_13"
                    android:layout_marginStart="@dimen/dp_30"
                    android:fontFamily="@font/inter"
                    android:text="@string/test"
                    android:textSize="@dimen/sp_18"
                    android:textColor="@color/black"
                    app:layout_constraintTop_toBottomOf="@id/info_gpa"
                    app:layout_constraintStart_toStartOf="parent"/>
                <LinearLayout
                    android:id="@+id/testEmptyLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/dp_30"
                    android:layout_marginTop="@dimen/dp_15"
                    android:orientation="vertical"
                    app:layout_constraintTop_toBottomOf="@id/t1"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>

                <LinearLayout
                    android:id="@+id/ln1"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_45"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_marginHorizontal="@dimen/dp_30"
                    android:orientation="horizontal"
                    app:layout_constraintTop_toBottomOf="@id/testEmptyLayout"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_45"
                        android:layout_weight="4"
                        android:fontFamily="@font/inter"
                        android:padding="@dimen/dp_10"
                        android:textSize="@dimen/sp_16"
                        android:textColor="@color/black"
                        android:textColorHint="@color/grey74"
                        android:background="@drawable/edit_input_radius"
                        android:hint="@string/test_name"
                        />
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_45"
                        android:layout_marginStart="@dimen/dp_10"
                        android:layout_weight="6"
                        android:fontFamily="@font/inter"
                        android:padding="@dimen/dp_10"
                        android:textSize="@dimen/sp_16"
                        android:textColor="@color/black"
                        android:textColorHint="@color/grey74"
                        android:background="@drawable/edit_input_radius"
                        android:hint="@string/score"
                        />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/ln2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_16"
                    android:layout_marginStart="@dimen/dp_30"
                    android:orientation="horizontal"
                    app:layout_constraintTop_toBottomOf="@id/ln1"
                    app:layout_constraintStart_toStartOf="parent">
                    <ImageView
                        android:layout_width="@dimen/dp_24"
                        android:layout_height="@dimen/dp_24"
                        android:src="@drawable/add_test"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp_10"
                        android:fontFamily="@font/inter"
                        android:text="@string/add_more_test"
                        android:textSize="@dimen/sp_18"
                        android:textColor="@color/black"/>
                </LinearLayout>
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/continueInfoBtn"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_45"
                    android:layout_marginTop="41dp"
                    android:layout_marginHorizontal="@dimen/dp_30"
                    android:fontFamily="@font/inter"
                    android:background="@drawable/signin_btn_radius"
                    android:textAllCaps="false"
                    android:text="Continue"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_18"
                    app:layout_constraintTop_toBottomOf="@id/ln2"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    />
        </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>
    </ScrollView>
</layout>