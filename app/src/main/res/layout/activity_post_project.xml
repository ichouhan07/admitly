<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.student.PostProjectActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/info1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_34"
                    android:fontFamily="@font/inter"
                    android:text="@string/post_project"
                    android:textSize="@dimen/sp_18"
                    android:textColor="@color/black"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>
                <TextView
                    android:id="@+id/c1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_61"
                    android:layout_marginStart="@dimen/dp_30"
                    android:fontFamily="@font/inter"
                    android:text="@string/country"
                    android:textSize="@dimen/sp_18"
                    android:textColor="@color/black"
                    app:layout_constraintTop_toBottomOf="@id/info1"
                    app:layout_constraintStart_toStartOf="parent" />
                <EditText
                    android:id="@+id/project_country"
                    style="@style/InformationEditTextStyle"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_45"
                    android:layout_marginTop="@dimen/dp_10"
                    android:background="@drawable/edit_input_radius"
                    android:hint="@string/enter"
                    app:layout_constraintTop_toBottomOf="@id/c1"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    />
                <TextView
                    android:id="@+id/y1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_13"
                    android:layout_marginStart="@dimen/dp_30"
                    android:fontFamily="@font/inter"
                    android:text="@string/year"
                    android:textSize="@dimen/sp_18"
                    android:textColor="@color/black"
                    app:layout_constraintTop_toBottomOf="@id/project_country"
                    app:layout_constraintStart_toStartOf="parent" />
                <EditText
                    android:id="@+id/project_year"
                    style="@style/InformationEditTextStyle"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_45"
                    android:layout_marginTop="@dimen/dp_10"
                    android:background="@drawable/edit_input_radius"
                    android:hint="@string/enter"
                    app:layout_constraintTop_toBottomOf="@id/y1"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    />
                <TextView
                    android:id="@+id/m1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_13"
                    android:layout_marginStart="@dimen/dp_30"
                    android:fontFamily="@font/inter"
                    android:text="@string/major"
                    android:textSize="@dimen/sp_18"
                    android:textColor="@color/black"
                    app:layout_constraintTop_toBottomOf="@id/project_year"
                    app:layout_constraintStart_toStartOf="parent" />
                <EditText
                    android:id="@+id/project_major"
                    style="@style/InformationEditTextStyle"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_45"
                    android:layout_marginTop="@dimen/dp_10"
                    android:background="@drawable/edit_input_radius"
                    android:hint="@string/enter"
                    app:layout_constraintTop_toBottomOf="@id/m1"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    />
                <TextView
                    android:id="@+id/ds1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_13"
                    android:layout_marginStart="@dimen/dp_30"
                    android:fontFamily="@font/inter"
                    android:text="@string/dream_school"
                    android:textSize="@dimen/sp_18"
                    android:textColor="@color/black"
                    app:layout_constraintTop_toBottomOf="@id/project_major"
                    app:layout_constraintStart_toStartOf="parent" />
                <EditText
                    android:id="@+id/project_dream_school"
                    style="@style/InformationEditTextStyle"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_45"
                    android:layout_marginTop="@dimen/dp_10"
                    android:background="@drawable/edit_input_radius"
                    android:hint="@string/enter"
                    app:layout_constraintTop_toBottomOf="@id/ds1"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    />
                <LinearLayout
                    android:id="@+id/ln2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_16"
                    android:layout_marginStart="@dimen/dp_30"
                    android:orientation="horizontal"
                    app:layout_constraintTop_toBottomOf="@id/project_dream_school"
                    app:layout_constraintStart_toStartOf="parent">
                    <ImageView
                        android:layout_width="@dimen/dp_24"
                        android:layout_height="@dimen/dp_24"
                        android:src="@drawable/add_test"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp_10"
                        android:fontFamily="@font/inter"
                        android:text="@string/add_more_dream_school"
                        android:textSize="@dimen/sp_18"
                        android:textColor="@color/black"/>
                </LinearLayout>
                <TextView
                    android:id="@+id/tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_27"
                    android:fontFamily="@font/inter"
                    android:text="@string/i_need_services"
                    android:textSize="@dimen/sp_16"
                    android:textColor="@color/black"
                    app:layout_constraintTop_toBottomOf="@id/ln2"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    />
                <LinearLayout
                    android:id="@+id/ln3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_15"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:weightSum="2"
                    app:layout_constraintTop_toBottomOf="@id/tv"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="150dp"
                        android:orientation="vertical">
                        <androidx.cardview.widget.CardView
                            android:id="@+id/smMatchingBox"
                            android:layout_width="@dimen/dp_100"
                            android:layout_height="@dimen/dp_100"
                            app:cardCornerRadius="@dimen/dp_10">
                            <ImageView
                                android:id="@+id/smMatching"
                                android:layout_width="@dimen/dp_50"
                                android:layout_height="@dimen/dp_50"
                                android:layout_gravity="center"
                                android:src="@drawable/s_m_matching" />
                        </androidx.cardview.widget.CardView>
                        <TextView
                            android:layout_width="@dimen/dp_100"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_5"
                            android:gravity="center"
                            android:fontFamily="@font/inter"
                            android:text="@string/school_major_matching"
                            android:textSize="@dimen/sp_16"
                            android:textColor="@color/black"
                            />
                    </LinearLayout>
                    <View
                        android:layout_width="@dimen/dp_20"
                        android:layout_height="match_parent"/>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="150dp"
                        android:orientation="vertical">
                        <androidx.cardview.widget.CardView
                            android:id="@+id/easyEditingBox"
                            android:layout_width="@dimen/dp_100"
                            android:layout_height="@dimen/dp_100"
                            app:cardCornerRadius="@dimen/dp_10">
                            <ImageView
                                android:id="@+id/easyEditing"
                                android:layout_width="@dimen/dp_50"
                                android:layout_height="@dimen/dp_50"
                                android:layout_gravity="center"
                                android:src="@drawable/easy_editing" />

                        </androidx.cardview.widget.CardView>
                        <TextView
                            android:layout_width="@dimen/dp_100"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_5"
                            android:fontFamily="@font/inter"
                            android:gravity="center"
                            android:text="@string/essay_editing"
                            android:textSize="@dimen/sp_16"
                            android:textColor="@color/black"
                            />
                    </LinearLayout>
                </LinearLayout>
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/postMyProject"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_45"
                    android:layout_marginTop="41dp"
                    android:layout_marginHorizontal="@dimen/dp_30"
                    android:fontFamily="@font/inter"
                    android:background="@drawable/signin_btn_radius"
                    android:textAllCaps="false"
                    android:text="@string/post_my_project"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_18"
                    app:layout_constraintTop_toBottomOf="@id/ln3"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>
    </ScrollView>
</layout>